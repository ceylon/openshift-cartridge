            <with module="com.redhat.ceylon.typechecker" version="${uv}" />
        </replace>
        <replace module="com.redhat.ceylon.module-resolver" version="1.2.0">
            <with module="com.redhat.ceylon.module-resolver" version="${uv}" />
        </replace>
        <replace module="com.redhat.ceylon.model" version="1.2.0">
            <with module="com.redhat.ceylon.model" version="${uv}" />
        </replace>
        <replace module="com.redhat.ceylon.compiler.java" version="1.2.0">
            <with module="com.redhat.ceylon.compiler.java" version="${uv}" />
        </replace>
        <replace module="com.redhat.ceylon.compiler.js" version="1.2.0">
